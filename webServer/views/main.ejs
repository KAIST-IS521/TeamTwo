<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Theme Made By www.w3schools.com - No Copyright -->
    <title>Welcome to Flags are us</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
  </head>
  <body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="50">

    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#myPage">Flagrus</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav navbar-right">
            <% if (typeof(user) != 'undefined') { %>
            <li><a href="#">WELCOME <%= user %> </a></li>
            <% } %>
            <li><a href="/">HOME</a></li>
            <li><a href="/#product">PRODUCT</a></li>
            <li><a href="/#contact">CONTACT</a></li>
            <% if (typeof(user) != 'undefined') { %>
            <li><a href="/cart">CART</a></li>
            <li><a href="/order">ORDERS</a></li>
            <li><a href="/mypage">MYPAGE</a></li>
            <% } %>
            <% if (typeof(user) == 'undefined') { %>
            <li onclick="document.getElementById('modal_login').style.display='block'"><a href="#login">LOGIN</a></li>
            <% } %>
            <% if (typeof(user) != 'undefined') { %>
            <li><a href="/logout">LOGOUT</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img src="/pics/soccer.png" alt="Game1" width="1200" height="700">
          <div class="carousel-caption">
            <h3>SOCCER MANAGER 2022</h3>
            <p>Try this game.</p>
          </div>
        </div>

        <div class="item">
          <img src="/pics/planet.png" alt="Game2" width="1200" height="700">
          <div class="carousel-caption">
            <h3>PLANET CRAFT</h3>
            <p>Play PLANET CRAFT Right Now</p>
          </div>
        </div>

        <div class="item">
          <img src="/pics/hyper.png" alt="Game3" width="1200" height="700">
          <div class="carousel-caption">
            <h3>HYPER MARIO Bros</h3>
            <p>Try Now!</p>
          </div>
        </div>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <!-- Container (Search Section) -->
    <div id="search" class="container">
      <h3 class="text-center">Search</h3>

      <form action="/search" method="get">
        <div class="form-group">
          <input type="text" class="form-control" name="keyword" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>

    </div>

    <!-- Container (PRODUCT Section) -->
    <div id="product" class="bg-1">
      <div class="container">
        <h3 class="text-center">Products</h3>
        <p class="text-center">Let's play the game<br> Buy serial-key and flag!</p>

        <div class="row text-center">
          <% products.forEach( function(product) { %>
          <div class="col-sm-4">
            <div class="thumbnail">
              <img src="<%= product.imgsrc %>" alt="<%= product.name %>" width="400" height="300">
              <h3 class="hidden-id-store"><%= product.product_id %></h3>
              <p><strong><%= product.name %></strong></p>
              <p>Price : <%= product.price %> won </p>
              <p> </p>
              <button class="btn detail-button" data-toggle="modal" data-target="#myModal">Details</button>
            </div>
          </div>
          <% }) %>
          <!--
          <div class="col-sm-4">
            <div class="thumbnail">
              <img src="pics/ancient.png" alt="ancient" width="400" height="300">
              <p><strong>ANCIENT CIVILIZATION</strong></p>
              <p>Price : 29,900won</p>
              <p> </p>
              <button class="btn" data-toggle="modal" data-target="#myModal">Details</button>
            </div>
          </div>
          -->
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button id="detail-close-button" type="button" class="close" data-dismiss="modal">Ã—</button>
              <h4><span class="glyphicon glyphicon-flag"></span> Details</h4>
            </div>
            <div class="modal-body">
              <form role="form">
                <div class="form-group" align="center">
                  <img src="#" id="selected-img" width="400" height="200">

                </div>
                <div class="form-group">
                  <p><strong id="selected-game-name">Description</strong></p>

                </div>

              </form>
            </div>

            <div class="modal-footer">
              <p align="center">
                <input name="quantity" id="quantity" style="vertical-align:middle; text-align:right" size="5" maxlength="4" value="0" />
                <img style="vertical-align:middle;" alt="alter_quantity" src="pics/btn_cnt.gif" usemap="#map_name_quantity"/>
                <map id="map_name_quantity" name="map_name_quantity">
                  <area href="javascript:modifyProductQuantity('quantity',1);" shape="rect" alt="plus" coords="0,0,9,10"/>
                  <area href="javascript:modifyProductQuantity('quantity',-1);" shape="rect" alt="minus" coords="0,10,9,20"/>
                </map>
              </p>

              <button id="add-to-cart-button" type="submit" class="btn btn-block">Add to cart </button>
              <button id="buy-button" type="submit" class="btn btn-block">Buy </button>
            </div>

          </div>
        </div>
      </div>
    </div>

    <!-- Container (Contact Section) -->
    <div id="contact" class="container">
      <h3 class="text-center">Contact</h3>
      <p class="text-center"><em>Message to Admin!</em></p>

      <div class="row">
        <div class="col-md-4">
          <p>Admin's contact information</p>
          <p><span class="glyphicon glyphicon-map-marker"></span>Daejeon, KOR</p>
          <p><span class="glyphicon glyphicon-phone"></span>Phone: +82-42-1234-5678</p>
          <p><span class="glyphicon glyphicon-envelope"></span>Email: admin@ctf.com</p>
        </div>
        <div class="col-md-8">

          <textarea class="form-control" id="comments" name="comments" placeholder="Comment" rows="5"></textarea>
          <br>
          <div class="row">
            <div class="col-md-12 form-group">
              <button id="button-send-message" class="btn pull-right" type="submit" onclick="msgFunction()">Send</button>
            </div>
          </div>

        </div>
      </div>
      <br>

    </div>

    <!-- Footer -->
    <footer class="text-center">
      <a class="up-arrow" href="#myPage" data-toggle="tooltip" title="TO TOP">
        <span class="glyphicon glyphicon-chevron-up"></span>
      </a><br><br>
      <p>Capture the Flag If you can</a></p>
    </footer>

    <!-- Login Modal -->
    <div id="modal_login" class="modal">

      <form class="modal-content animate" action="/login" method="post">
        <div class="container-modal">
          <label><b>Username</b></label><br>
          <input type="text" id="id" placeholder="Enter Username" name="id" required><br>

          <label><b>Password</b></label><br>
          <input type="password" id="pw" placeholder="Enter Password" name="pw" required><br>

          <input type="checkbox" checked="checked"> Remember me<p></p>
          <button type="submit" class="signupbtn" value="Log in">Login</button>
          <button type="button" onclick="document.getElementById('modal_login').style.display='none'" class="cancelbtn">Cancel</button><br>
        </div>
        <div class="container-modal" style="background-color:#f1f1f1">
          <br><span class="pw">Join Flagrus <a href="signup.html">sign up</a></span>
        </div>

      </form>
    </div>

  </body>
</html>
