<!DOCTYPE html>

<html>
<head>
<title>Your order status : IS521 Shopping Mall</title>
<body>
	<p>
	    Welcome <%= user %>! <br>
    	<a href="/logout">log out</a>
    </p>
    <p>
    	Search :
    	<form action="/product/search" method="get">
			<input type="text" id="keyword" name="keyword" placeholder="Search item"/>
			<input type="submit" value="Find">
    	</form>
    </p>
	<% orders.forEach( function(order){ %>
	    <p>
	        User ID: <%= order.user_id %> <br>
	        Order ID: <%= order.order_id %> <br>
	    </p>
	<%}) %>
</body>
</html>