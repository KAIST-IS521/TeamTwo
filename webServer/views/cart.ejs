<!DOCTYPE html>
<html lang="en">
  <head>
    <title> Cart Page: Flag are us </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="css/cart.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="js/cart.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#myPage">Flagrus</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">WELCOME <%= user %></a></li>
            <li><a href="/">HOME</a></li>
            <li><a href="/#product">PRODUCT</a></li>
            <li><a href="/#contact">CONTACT</a></li>
            <li><a href="/cart">CART</a></li>
            <li><a href="/order">ORDERS</a></li>
            <li><a href="/mypage">MYPAGE</a></li>
            <li><a href="/logout">LOGOUT</a></li>
          </ul>
        </div> <!-- end of menues -->
      </div>
    </nav>

    <div id="cartMain" class="bg-1">
      <div class="container">
        <h3 class="text-center"> Carts </h3>
        <p class="text-center"> Check your items carefully :P </p>

        <div class="list-group game-item-group">
          <% var total = 0; %>
          <% items.forEach( function(item) { %>
          <button type="button" class="list-group-item game-item">
            <%= item.name %>
            <span class="badge"> <%= item.num %> </span>
            <span class="cart-id"> <%= item.cart_id %> </span>
            <% total += item.price * item.num %>
          </button>
          <% }) %>
          <!--
          <button type="button" class="list-group-item game-item">
            Planet craft
            <span class="badge"> 2 </span>
            <span class="product-id"> 1 </span>
          </button>
          -->
        </div>

        <% if ( items.length != 0 ) { %>
        <button type="button" id="orderbutton"> Order Now! </button>
        <% } %>
      </div> <!-- end of container -->
    </div> <!-- end of cart Main -->

    <div id="remove-popup" class="msgpopup">
      <h2 class="text-center"> Do you really want to remove this item from cart? </h2>
      <h3 class="text-center name-to-remove"> YOYOYO </h3>
      <span class="cart-id" id="id-to-send"> a </span>
      <button type="button" class="yesbtn"> NO </button>
      <button type="button" class="nobtn"> YES </button>
    </div> <!-- end of popup -->

    <div id="order-popup" class="msgpopup">
      <h2 class="text-center bottom-space"> Send money here </h2>
      <h3 class="text-center"> Total : <%= total %> </h3>
      <h3 id="account-container" class="text-center"> Account: TempAccount1 </h3>
    </div>
  </body>
</html>
